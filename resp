# Leyendo archivos
        barra_progreso['value'] = 20
        window.update_idletasks()
        progres_label.config(text="20%: Leyendo archivos")
        time.sleep(1)

        # Analizando archivos
        barra_progreso['value'] = 30
        window.update_idletasks()
        progres_label.config(text="30%: Analizando archivos")
        time.sleep(1)

        # Clasificando archivos
        barra_progreso['value'] = 45
        window.update_idletasks()
        progres_label.config(text="45%: Clasificando archivos")
        time.sleep(1)

        # Creando carpetas
        barra_progreso['value'] = 75
        window.update_idletasks()
        progres_label.config(text="75%: Creando carpetas")
        time.sleep(1)

        # Asignando archivos
        barra_progreso['value'] = 90
        window.update_idletasks()
        progres_label.config(text="90%: Asignando archivos")
        time.sleep(1)